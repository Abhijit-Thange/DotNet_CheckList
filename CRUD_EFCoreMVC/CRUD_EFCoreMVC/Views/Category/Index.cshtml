@model IEnumerable<DataAccessLayer.Models.Category>

@{

}

<h1>Category List</h1>
<div>
    <a asp-action="AddCategory">Create Category</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">CategoryName</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td scope="row">@item.CategoryName</td>    
                <td>
                    <a class="btn btn-outline-success" href="@Url.Action("AddProduct", "Product",new { CategoryId = item.CategoryId })">AddProduct  </a>
                    @Html.ActionLink("Edit  ", "EditCategoryDetails", new { CategoryId = item.CategoryId }, new { @class = "btn btn-outline-warning" })
                    @Html.ActionLink("Details  ", "CategoryDetails", new { CategoryId = item.CategoryId }, new { @class = "btn btn-outline-info" })
                    @Html.ActionLink("Delete  ", "DeleteCategoryDetails", new { CategoryId = item.CategoryId }, new { @class = "btn btn-outline-danger" })

                </td>
            </tr>
        }      
    </tbody>
</table>
