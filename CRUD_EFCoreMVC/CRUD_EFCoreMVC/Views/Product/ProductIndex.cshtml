@model IEnumerable<DataAccessLayer.Models.Product>

@{

}

@using (Html.BeginForm("ProductIndex", "Product", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <div class="form-group">
            @Html.Label("CategoryName", "",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @* <input value="@CategoryId" class="form-control" id="CategoryId" name="CategoryId" />*@
                @Html.DropDownList("CategoryId", ViewBag.Categories as SelectList, "Select Category")
              
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="OK" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
}
<hr />
<h1>Product List</h1>
<div>
    <a asp-action="AddProduct">Add Product</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ProductName</th>
            <th scope="col">Price</th>
            <th scope="col">MfgDate</th>
            <th scope="col">CreatedBy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.ProductName</td>
                <td scope="row">@item.Price</td>
                <td scope="row">@item.MfgDate</td>
                <td scope="row">@item.CreatedBy</td>
                <td>
                    @Html.ActionLink("Edit  ", "EditProductDetails", new { ProductId = item.ProductId }, new { @class = "btn btn-outline-warning" })
                    @Html.ActionLink("Details  ", "ProductDetails", new { ProductId = item.ProductId }, new { @class = "btn btn-outline-info" })
                    @Html.ActionLink("Delete  ", "DeleteProductDetails", new { ProductId = item.ProductId }, new { @class = "btn btn-outline-danger" })

                </td>
            </tr>
        }
    </tbody>
</table>

